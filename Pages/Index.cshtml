@page
@{
    ViewData["Title"] = "Login - Signup";
}

<div class="mx-auto d-flex flex-column justify-content-center h-100" style="padding-top: 30%">
    <div class="input-group mb-3 mx-auto" style="width: 300px">
        <div class="input-group-prepend">
            <span class="input-group-text">Username</span>
        </div>
        <input id="username" type="text" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
    </div>
    <div class="input-group mb-3 mx-auto" style="width: 300px">
        <div class="input-group-prepend">
            <span class="input-group-text">Password</span>
        </div>
        <input id="password" type="password" class="form-control" placeholder="Password" aria-label="Username" aria-describedby="basic-addon1">
    </div>
    <div class="mx-auto">
        <button class="btn btn-primary mr-3" id="login-btn">Login</button>
        <button class="btn btn-success ml-3" id="signup-btn">Signup</button>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/login.js"></script>