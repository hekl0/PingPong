@page
@{
    ViewData["Title"] = "Game";
}
<div style="display: flex; flex-direction: column; justify-content: center; align-items: center; text-align: center; min-height: 100vh;">
    <div style="font-size: 0">
        <div id="theme-kitchen" style="background:url(../../assets/kitchen/background.png); position: relative; background-size: cover; width: 350px; height: 500px; display: inline-block; border-radius: 30px 0px 0px 30px">
            <p style="position: absolute; font-size: 12px; color: white; font-family: italic; top: 95%; left: 40%">by Phg Trang</p>
            <div id="censor-kitchen" hidden style="background-color: rgba(0, 0, 0, 0.7); position: relative; background-size: cover; width: 350px; height: 500px; display: inline-block; border-radius: 30px 0px 0px 30px"></div>
        </div>
        <div id="theme-space" style="background:url(../../assets/space/background.png); position: relative; background-size: cover; width: 350px; height: 500px; display: inline-block; border-radius: 0px 30px 30px 0px;">
            <p style="position: absolute; font-size: 12px; color: white; font-family: italic; top: 95%; left: 40%">by Thanh Bao</p>
            <div id="censor-space" style="background-color: rgba(0, 0, 0, 0.7); position: relative; background-size: cover; width: 350px; height: 500px; display: inline-block; border-radius: 0px 30px 30px 0px"></div>
        </div>
    </div>
    <div class="card text-center pt-4 pl-4 pr-4 rounded" style="background-color:rgba(240, 240, 240, 0.9); position: absolute; padding: 10px; z-index: 10">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-default">Room:</span>
            </div>
            <input type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
        </div>
        <div class="mt-3">
            <button type="button" class="btn btn-primary mx-3" style="font-size: 15px; width: 120px; height: 45px">Create Room</button>
            <button type="button" class="btn btn-primary mx-3" style="font-size: 15px; width: 120px; height: 45px">Join Room</button>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/test.js"></script>